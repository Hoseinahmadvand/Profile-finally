@page
@model IndexModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Manage About Us";
}

<div class="card bg-dark text-light shadow-lg">
    <div class="card-header border-0 d-flex justify-content-between align-items-center">
        <h3 class="fw-bold m-0">Manage About Us</h3>
        <a asp-page="./Edit" class="btn btn-success btn-sm shadow-sm">
            <i class="bi bi-pencil-square me-2"></i>Edit About Us
        </a>
    </div>
    <div class="card-body">
        <h5 class="mb-4">Translations</h5>
        <table class="table table-bordered table-dark table-hover">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Language</th>
                    <th scope="col">Title</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var translation in Model.AboutUs.Translations)
                {
                    <tr>
                        <td>@translation.Language</td>
                        <td>@translation.Title</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        background-color: #343a40;
        border-bottom: 2px solid #495057;
        padding: 1rem 1.5rem;
    }

    .card-body {
        padding: 1.5rem;
    }

    .table {
        border-collapse: separate;
        border-spacing: 0;
        margin-top: 1rem;
    }

    th, td {
        vertical-align: middle;
        text-align: center;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            color: #fff;
        }
</style>
