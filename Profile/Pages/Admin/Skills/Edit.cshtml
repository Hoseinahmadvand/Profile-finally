@page "{id:int}"
@model Profile.Pages.Admin.Skills.EditModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Edit Skill";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card bg-dark text-light shadow-lg">
        <div class="card-header text-center border-0">
            <h3 class="fw-bold">Edit Skill</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="SkillId" value="@Model.SkillId" />
                <div class="form-group mb-3">
                    <label class="form-label">Percent</label>
                    <input asp-for="Percent" class="form-control" type="number" min="0" max="100" />
                </div>

                <fieldset class="mb-3">
                    <legend class="fw-bold">Title</legend>
                    <div class="form-group mb-3">
                        <label class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Language</label>
                        <select class="form-control" name="lang">
                            @if (Model.lang == Models.Common.Language.fa)
                            {
                                <option value="1" selected>Persian</option>
                            }
                            else
                            {
                                <option value="1">Persian</option>
                            }
                            @if (Model.lang == Models.Common.Language.ar)
                            {
                                <option value="2" selected>Arabic</option>
                            }
                            else
                            {
                                <option value="2">Arabic</option>
                            }
                            @if (Model.lang == Models.Common.Language.de)
                            {
                                <option value="3" selected>Germany</option>
                            }
                            else
                            {
                                <option value="3">Germany</option>
                            }
                        </select>

                    </div>
                </fieldset>

                <div class="text-center">
                    <button type="submit" class="btn btn-outline-success btn-lg shadow-sm">
                        <i class="bi bi-save me-2"></i>Save Changes
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-light btn-lg shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }

    .card {
        border-radius: 15px;
    }

    .card-header {
        background-color: #343a40;
        border-bottom: 2px solid #495057;
    }

    .btn-outline-success, .btn-outline-light {
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: #ffffff;
        }

        .btn-outline-light:hover {
            background-color: #ffffff;
            color: #121212;
        }
</style>
