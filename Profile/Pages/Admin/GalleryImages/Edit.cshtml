@page "{id:int}"
@using Profile.Models.Common
@model EditModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Edit Gallery Image";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card bg-dark text-light shadow-lg">
        <div class="card-header text-center border-0">
            <h3 class="fw-bold">Edit Gallery Image</h3>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="ImageFile">Replace Image</label>
                    <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" />
                    <small style="color: red">@TempData["ErrorMessage"]</small>
                    <div class="mt-3">
                        <img src="~/@Model.ImagePath" alt="Current Image" style="width:150px;" class="img-thumbnail" />
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Select Language</label>

                    <select class="form-control" asp-for="lang">
                        @if (Model.lang == Models.Common.Language.fa)
                        {
                            <option value="fa" selected>Persian</option>
                        }
                        else
                        {
                            <option value="fa">Persian</option>
                        }
                        @if (Model.lang == Models.Common.Language.ar)
                        {
                            <option value="ar" selected>Arabic</option>
                        }
                        else
                        {
                            <option value="ar">Arabic</option>
                        }
                        @if (Model.lang == Models.Common.Language.de)
                        {
                            <option value="de" selected>Germany</option>
                        }
                        else
                        {
                            <option value="de">Germany</option>
                        }
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-outline-success btn-lg shadow-sm">
                        <i class="bi bi-save me-2"></i>Save
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-light btn-lg shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }

    .card {
        border-radius: 15px;
    }

    .card-header {
        background-color: #343a40;
        border-bottom: 2px solid #495057;
    }

    .btn-outline-success, .btn-outline-light {
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-outline-success:hover {
        background-color: #28a745;
        color: #ffffff;
    }

    .btn-outline-light:hover {
        background-color: #ffffff;
        color: #121212;
    }
</style>
