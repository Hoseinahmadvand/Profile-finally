@page "{id:int}"
@using Profile.Models.SetingSiteAgg
@model Profile.Pages.Admin.FooterMange.EditModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Edit Footer";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card bg-dark text-light shadow-lg">
        <div class="card-header text-center border-0">
            <h3 class="fw-bold">Edit Footer</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-3">
                    <label class="form-label" for="Link">Link</label>
                    <input type="hidden" asp-for="@Model.Footer.Id" class="form-control" value="@Model.Footer.Id" />
                    <input type="text" id="Link" name="Footer.Link" class="form-control" value="@Model.Footer.Link" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="Title">Persian Title</label>
                    <input type="text" id="Title" name="Footer.Title" class="form-control" value="@Model.Footer.Title" />
                </div>
               
                <div class="form-group mb-3">
                    <label class="form-label" for="lang">language</label>
                    <select class="form-control" name="Footer.lang">
                        @if (Model.Footer.lang == Models.Common.Language.fa)
                        {
                            <option value="fa" selected>Persian</option>
                        }
                        else
                        {
                            <option value="fa">Persian</option>
                        }
                        @if (Model.Footer.lang == Models.Common.Language.ar)
                        {
                            <option value="ar" selected>Arabic</option>
                        }
                        else
                        {
                            <option value="ar">Arabic</option>
                        }
                        @if (Model.Footer.lang == Models.Common.Language.de)
                        {
                            <option value="de" selected>Germany</option>
                        }
                        else
                        {
                            <option value="de">Germany</option>
                        }
                    </select>
                   
                </div>   
                <div class="form-group mb-3">
                    <label class="form-label" for="Position">Position</label>
                        <select id="Position" name="Footer.Position" class="form-control">
                        @if (Model.Footer.Position == position.Left)
                        {
                            <option value="Left"selected >Left</option>
                        }
                        else
                        {
                            <option value="Left" >Left</option>
                        }  
                        
                        @if (Model.Footer.Position == position.center)
                        {
                            <option value="center" selected>Center</option>
                        }
                        else
                        {
                            <option value="center">Center</option>
                        } 
                        
                        @if (Model.Footer.Position == position.Right)
                        {
                            <option value="Right" selected>Right</option>
                        }
                        else
                        {
                            <option value="Right">Right</option>
                        }
                            
                            
                       
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-outline-success btn-lg shadow-sm">
                        <i class="bi bi-save me-2"></i>Save Changes
                    </button>
                    <a asp-page="Index" class="btn btn-outline-light btn-lg shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }
    .card {
        border-radius: 15px;
    }
    .card-header {
        background-color: #343a40;
        border-bottom: 2px solid #495057;
    }
    .btn-outline-success, .btn-outline-light {
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    .btn-outline-success:hover {
        background-color: #28a745;
        color: #ffffff;
    }
    .btn-outline-light:hover {
        background-color: #ffffff;
        color: #121212;
    }
</style>
