@page
@model Profile.Pages.Admin.FooterMange.CreateModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Create Footer";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card bg-dark text-light shadow-lg">
        <div class="card-header text-center border-0">
            <h3 class="fw-bold">Create Footer</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-3">
                    <label class="form-label" for="Link">Link</label>
                    <input type="text" id="Link" name="Footer.Link" class="form-control" required/>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="Title"> Title</label>
                    <input type="text" id="Title" name="Footer.Title" class="form-control" required />
                </div>
               
                <div class="form-group mb-3">
                    <label class="form-label" for="lang">language</label>
                    <select id="lang" name="Footer.lang" class="form-control">
                        <option value="1">persian</option>
                        <option value="2">arabic</option>
                        <option value="3">germany</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="Position">Position</label>
                    <select id="Position" name="Footer.Position" class="form-control">
                        <option value="Left">Left</option>
                        <option value="Right">Right</option>
                        <option value="Center">Center</option>
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-outline-success btn-lg shadow-sm">
                        <i class="bi bi-save me-2"></i>Save
                    </button>
                    <a asp-page="Index" class="btn btn-outline-light btn-lg shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }
    .card {
        border-radius: 15px;
    }
    .card-header {
        background-color: #343a40;
        border-bottom: 2px solid #495057;
    }
    .btn-outline-success, .btn-outline-light {
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    .btn-outline-success:hover {
        background-color: #28a745;
        color: #ffffff;
    }
    .btn-outline-light:hover {
        background-color: #ffffff;
        color: #121212;
    }
</style>
