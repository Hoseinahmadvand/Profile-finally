@page

@model IndexModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Contact Us";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card bg-dark text-light shadow-lg">
        <div class="card-header d-flex justify-content-between align-items-center border-0">
            <h3 class="fw-bold m-0">Contact Us</h3>
            <a asp-page="./Edit" asp-route-id="@Model.ContactInfo.Id" class="btn btn-success btn-sm shadow-sm">
                <i class="bi bi-pencil-square me-2"></i>Edit Contact Us
            </a>
        </div>
        <div class="card-body">
            <div class="card text-light mb-4">
                <div class="card-body">
                    <h4 class="fw-bold">Contact Information</h4>
                  
                    <p><strong>Email:</strong> @Model.ContactInfo.Email</p>
                    <p><strong>Phone:</strong> @Model.ContactInfo.Phone</p>
                    <p><img src="/fa.svg" class="flag-icon" /> @Html.Raw(Model.FarsiDescription)</p>
                    <p><img src="/ar.svg" class="flag-icon" /> @Html.Raw(Model.ArabicDescription)</p>
                    <p><img src="/de.svg" class="flag-icon" /> @Html.Raw(Model.GermanDescription)</p>
                </div>
            </div>

       
        </div>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }

    .card {
        border-radius: 15px;
    }

    .card-header {
        background-color: #343a40;
        border-bottom: 2px solid #495057;
        padding: 1rem 1.5rem;
    }

    .card-body {
        padding: 1.5rem;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            color: #fff;
        }
</style>
