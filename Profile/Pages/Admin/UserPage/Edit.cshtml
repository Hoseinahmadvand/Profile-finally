@page
@model Profile.Pages.Admin.UserPage.EditModel
@{
    ViewData["Title"] = "Edit Admin";
}

<div class="container mt-5">
    <div class="card shadow-lg bg-dark text-light">
        <div class="card-header">
            <h4>Edit Admin</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" asp-for="UserName" class="form-control" placeholder="Enter username" required />
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
